<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel="stylesheet" href="public/css/style.css">
    <title>Registro</title>
</head>
<body>
   
    <%- include('partials/elements.ejs') %>

    <div class="page">
        <h2>Registro</h2>
        <form action="registroA" id="frm">
            <p>Nombre de usuario</p>
            <input type="text" name="nombre" required>
            <p>Correo electr칩nico</p>
            <input type="email" name="correo" required>
            <p>Contrase침a</p>
            <input type="password" name="clave" required>
            <p>Repita su contrase침a</p>
            <input type="password" id="clave2" required>
            <input type="submit" value="Enviar">
        </form>
    </div>
    
</body>
</html>
<script src="functions/action.js"></script>
<script>
    colaMsg.add('Introduzca sus datos por favor.');
    clave2.addEventListener('input', () => {
        if (frm.clave.value != clave2.value) clave2.setCustomValidity("Las contrase침as no coinciden");
        else frm.clave2.setCustomValidity("");
    });
    frm.addEventListener('submit', e => {
        colaMsg.add('Cargando...');
        e.preventDefault();
        fetch('/registrar', {
            method: 'POST', 
            body: JSON.stringify(Object.fromEntries(new FormData(frm))),
            headers: { 'content-type': "application/json" }
        })
        .then(e => e.json()).then(data => {
            //console.log(data);
            colaMsg.add(data.msg);
            if(data.r) location.href = '/';
            else{
                frm.nombre.value = '';
                frm.nombre.focus();
            }
        });
    });
</script>