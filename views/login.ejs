<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel="stylesheet" href="public/css/style.css">
    <title>Inicio de sesi칩n</title>
</head>
<body>
   
    <%- include('partials/elements.ejs', { user }) %>

    <div class="page">
        <h2>Inicio de sesi칩n</h2>
        <form id="frm">
            <p>Nombre de usuario</p>
            <input type="text" name="nombre" required>
            <p>Contrase침a</p>
            <input type="password" name="clave" required>
            <input type="submit" value="Enviar">
        </form>
    </div>
</body>
</html>
<script src="functions/action.js"></script>
<script>
    colaMsg.add('Introduzca sus datos por favor.');

    frm.addEventListener('submit', e => {
        e.preventDefault();
        msgBox.innerHTML = 'Cargando...';

        fetch('/login', {
            method: 'POST',
            body: JSON.stringify(Object.fromEntries(new FormData(frm))),
            headers: { 'content-type': "application/json" }
        })
        .then(e => e.text()).then(data => {
            switch(data){
                case '1':
                    colaMsg.add('El usuario no existe, intente <a href="/registro">Registrarse</a>.');
                    frm.nombre.value = '';
                    frm.nombre.focus();
                break;
                case '2':
                    colaMsg.add('Contrase침a incorrecta.');
                    frm.clave.value = '';
                    frm.clave.focus();
                break;
                case '3':
                    location.href = '/';
                break;
            }
        });
    });
</script>